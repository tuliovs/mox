{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "lib",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strictFunctionTypes": false,
    "strict": false,
    "inlineSourceMap": true,
    "noImplicitReturns": false,
    "module": "commonjs",
    "target": "es2017",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es6",
      "esnext.asynciterable",
      "es2017",
      "dom"
    ]
  }
}
